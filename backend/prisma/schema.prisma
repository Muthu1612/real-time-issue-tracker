generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      Int     @id @default(autoincrement())
  name    String
  email   String  @unique
  issues  Issue[]
}

model Issue {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  status      IssueStatus  @default(OPEN)
  type        String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  deletedAt   DateTime?
  assignedTo  Int?
  assigned    User?        @relation(fields: [assignedTo], references: [id])
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  CLOSED
}

enum IssueType {
  BUG
  FEATURE
  TASK
}
