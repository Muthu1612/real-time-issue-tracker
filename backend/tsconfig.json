{
  "compilerOptions": {
    // Node.js target
    "target": "ES2020",
    "module": "CommonJS",

    // Project structure
    "rootDir": "src",
    "outDir": "dist",

    // Type checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Module interop
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // For Node.js types
    "types": ["node", "express"],

    // Source maps for easier debugging
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
